  "authors": ["Snownee"],
  "contact": {
    "homepage": "https://minecraft.curseforge.com/projects/mini-effects-fabric",
    "sources": "https://github.com/Snownee/MiniEffects",
    "issues": "https://github.com/Snownee/MiniEffects/issues"
  },

  "license": "MIT",

  "environment": "client",
  "entrypoints": {
    "client": [
      "snownee.minieffects.MiniEffects"
    ]
  },
  "mixins": ["minieffects.mixins.json"],

  "depends": {
    "fabricloader": ">=0.11.3",
    "minecraft": ">=1.18.2",
    "java": ">=17"
  },

  "custom": {
    "modmenu": {
      "links": {
